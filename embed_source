#!/bin/bash
set -e

BASE=$(dirname `pwd`/$0)/
cd $BASE/../

#Now in MCP
mkdir -p src/common/factorization
mkdir -p src/minecraft/factorization/
mkdir -p src/minecraft_server/factorization

pushd src/common/factorization
  ln -s $BASE/src/common/* ./
popd

pushd src/minecraft/factorization
  ln -s $BASE/src/client ./
  #ln -s $BASE/src/inject/FactorizationHack.java ../net/minecraft/src/
popd

pushd src/minecraft_server/factorization/
  ln -s $BASE/src/server ./
  #ln -s $BASE/src/inject/FactorizationHack.java ../net/minecraft/src/
popd

mkdir -p lib/factorization
pushd lib/factorization
  ln -s ../../factorization/texture/
popd
